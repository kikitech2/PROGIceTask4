public class Customization {
// Variables declared for the design and customization of the Car.
    private String make;
    private String model;
    private String color;

//Constructor made for the customization of the variables that have been declared.
    public Customization(String make, String model, String color) {
        this.make = make;
        this.model = model;
        this.color = color;
    }
    //Getters of the variables attributes.
    public String getMake() {
        return make;
    }

    public String getModel() {
        return model;
    }

    public String getColor() {
        return color;
    }
    // Displays the report of the Car built by the user.
    public String generateReport() {
        return String.format("Car Make: %s %s, " +
                "Color: %s",
                make,
                model,
                color);
    }
}



